<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="slalom.com.retreatapplication" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <service android:name=".util.TPartyService" />

        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name" >

        </activity>
        <activity
            android:name=".CreateUserActivity"
            android:label="@string/title_activity_create_user" >
        </activity>
        <activity
            android:name=".RetreatAppMainView"
            android:label="@string/title_activity_retreat_app_main_view" >
        </activity>
        <activity
            android:name=".GameViewActivity"
            android:label="@string/title_activity_game_view" >
        </activity>
        <activity
            android:name=".InformationActivity"
            android:label="@string/title_activity_information" >
        </activity>
        <activity
            android:name=".AgendaActivity"
            android:label="@string/title_activity_agenda" >
        </activity>
        <activity
            android:name=".ActivitiesActivity"
            android:label="@string/title_activity_activities" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TrendingActivity"
            android:label="@string/title_activity_trending" >
        </activity>
    </application>

</manifest>
