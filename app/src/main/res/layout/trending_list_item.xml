<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp" >

    <TextView
        android:id="@+id/check_in_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="###"
        android:layout_marginLeft="10dp"
        android:paddingRight="40dp"
        android:paddingLeft="20dp"
        android:textSize="25sp"
        android:textColor="#0080FF"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/location_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LocationName"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="17sp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/check_in_count"
        android:layout_toEndOf="@+id/check_in_count" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/next"
        android:layout_alignBottom="@+id/check_in_count"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/check_in_count"
        android:layout_marginRight="8dp"
        android:contentDescription="next" />

</RelativeLayout>
