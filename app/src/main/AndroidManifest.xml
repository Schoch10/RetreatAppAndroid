<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="slalom.com.retreatapplication" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon_2x"
        android:label="RetreatApplication"
        android:theme="@style/CustomActionBarTheme" >
        <service android:name=".util.TPartyService" />

        <activity
            android:name=".HomeActivity"
            android:label="Welcome to the Slalom T Party!"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateUserActivity"
            android:label="Create User">
        </activity>
        <activity
            android:name=".RetreatAppMainView"
            android:label="Slalom" >
        </activity>
        <activity
            android:name=".GameViewActivity"
            android:label="Game" >
        </activity>
        <activity
            android:name=".InformationActivity"
            android:label="Information" >
        </activity>
        <activity
            android:name=".AgendaActivity"
            android:label="Agenda" >
        </activity>
        <activity
            android:name=".LocationFeedActivity"
            android:label="@string/title_activity_location_feed"
            android:launchMode="singleTask">
        </activity>
        <activity
            android:name=".TrendingActivity"
            android:label="Select Location" >
        </activity>
        <activity
            android:name=".ViewPostsActivity"
            android:label="View Posts" >
        </activity>
        <activity
            android:name=".CreatePostActivity"
            android:label="New Post"
            android:noHistory="true">
        </activity>
    </application>

</manifest>
